{
  "manifest_version": 3,
  "name": "FastBrowse",
  "version": "1.1.0",
  "description": "Lightweight extension to reduce memory usage through smart tab management (Firefox build)",

  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "109.0"
    }
  },

  "permissions": [
    "tabs",
    "storage",
    "notifications",
    "activeTab",
    "scripting",
    "contextMenus",
    "webNavigation",
    "idle",
    "alarms"
  ],

  "background": {
    "service_worker": "src/background.js"
  },

  "action": {
    "default_popup": "src/popup.html",
    "default_title": "FastBrowse - Memory Optimizer",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "96": "assets/icon96.png",
      "128": "assets/icon128.png"
    }
  },

  "options_page": "src/options.html",

  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "96": "assets/icon96.png",
    "128": "assets/icon128.png"
  },

  "host_permissions": [
    "<all_urls>"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/focus-mode.js"],
      "css": ["src/content/focus-mode.css"],
      "run_at": "document_start"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["assets/*", "src/content/*", "src/offscreen.html", "src/offscreen.js"],
      "matches": ["<all_urls>"]
    }
  ],

  "commands": {
    "toggle-focus-mode": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Toggle Focus Mode"
    },
    "suspend-all-tabs": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Suspend all tabs"
    },
    "auto-group-tabs": {
      "suggested_key": {
        "default": "Ctrl+Shift+G",
        "mac": "Command+Shift+G"
      },
      "description": "Auto-group tabs by tags"
    },
    "quick-tag-current": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "mac": "Command+Shift+T"
      },
      "description": "Quick tag current tab"
    }
  }
}
