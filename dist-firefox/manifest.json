{
  "manifest_version": 2,
  "name": "FastBrowse",
  "version": "1.1.0",
  "description": "Lightweight extension to reduce memory usage through smart tab management (Firefox MV2)",

  "applications": {
    "gecko": {
      "strict_min_version": "91.0"
    }
  },

  "permissions": [
    "tabs",
    "storage",
    "notifications",
    "activeTab",
    "contextMenus",
    "webNavigation",
    "idle",
    "alarms",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["src/background.js"],
    "persistent": true
  },

  "browser_action": {
    "default_popup": "src/popup.html",
    "default_title": "FastBrowse - Memory Optimizer",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },

  "options_ui": {
    "page": "src/options.html",
    "open_in_tab": true
  },

  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/focus-mode.js"],
      "css": ["src/content/focus-mode.css"],
      "run_at": "document_start"
    }
  ],

  "web_accessible_resources": [
    "assets/*",
    "src/content/*",
    "src/offscreen.html",
    "src/offscreen.js"
  ],

  "commands": {
    "toggle-focus-mode": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Toggle Focus Mode"
    },
    "suspend-all-tabs": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Suspend all tabs"
    },
    "auto-group-tabs": {
      "suggested_key": {
        "default": "Ctrl+Shift+G",
        "mac": "Command+Shift+G"
      },
      "description": "Auto-group tabs by tags"
    },
    "quick-tag-current": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "mac": "Command+Shift+T"
      },
      "description": "Quick tag current tab"
    }
  },

  "content_security_policy": "script-src 'self'; object-src 'self'"
}
