{
  "manifest_version": 3,
  "name": "FastBrowse",
  "version": "1.1.0",
  "description": "Lightweight Chrome extension to reduce memory usage through smart tab management",
  
  "permissions": [
    "tabs",
    "storage",
    "system.memory",
    "notifications",
    "management",
    "activeTab",
    "scripting"
  ],
  
  "background": {
    "service_worker": "src/background.js"
  },
  
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "FastBrowse - Memory Optimizer",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  
  "options_page": "src/options.html",
  
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/focus-mode.js"],
      "css": ["src/content/focus-mode.css"],
      "run_at": "document_start"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "src/content/*"],
      "matches": ["<all_urls>"]
    }
  ]
}